<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        >
        
        <ImageView
                android:id="@+id/na_col_logo"
                android:layout_width="wrap_content"
                android:layout_height="50dp"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:scaleType="fitEnd"
                android:src="@mipmap/ic_launcher"
                />
        
        <TextView
                android:id="@+id/na_col_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Hora"
                />
        
        <TextView
                android:id="@+id/na_col_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginLeft="8dp"
                android:layout_marginRight="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/na_col_hour"
                android:layout_toRightOf="@id/na_col_hour"
                android:textAllCaps="true"
                android:textSize="14sp"
                tools:text="Sala"
                />
        
        
        <TextView
                android:id="@+id/na_col_title"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginEnd="8dp"
                android:layout_marginRight="8dp"
                android:layout_below="@id/na_col_hour"
                android:lines="2"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:text="TÃ­tulo"
                android:layout_alignParentStart="true"
                android:layout_alignParentLeft="true"
                android:layout_toLeftOf="@id/na_col_logo"
                android:layout_toStartOf="@id/na_col_logo"
                />


</RelativeLayout >