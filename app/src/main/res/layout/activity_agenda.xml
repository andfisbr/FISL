<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".CalendarActivity"
        tools:targetApi="lollipop"
        >
        
        
        <ImageView
                android:id="@+id/agenda_banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_banner_background"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                />
        
        <ImageView
                android:id="@+id/agenda_logo"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:src="@drawable/ic_logo_piece"
                app:layout_constraintBottom_toBottomOf="@+id/agenda_banner"
                app:layout_constraintRight_toRightOf="parent"
                />
        
        
        <RelativeLayout
                android:id="@+id/agenda_toolbar"
                android:layout_width="match_parent"
                android:layout_height="56dp"
                android:orientation="horizontal"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                >
                
                <ImageView
                        android:id="@+id/agenda_back"
                        android:layout_width="56dp"
                        android:layout_height="match_parent"
                        android:background="?attr/selectableItemBackgroundBorderless"
                        android:clickable="true"
                        android:focusable="true"
                        android:padding="12dp"
                        android:src="@drawable/ic_arrow_back_black_24dp"
                        />
                
                <TextView
                        android:layout_width="wrap_content"
                        android:layout_height="match_parent"
                        android:layout_toEndOf="@id/agenda_back"
                        android:layout_toRightOf="@id/agenda_back"
                        android:fontFamily="sans-serif-condensed"
                        android:gravity="center_vertical"
                        android:text="Agenda"
                        android:textAllCaps="true"
                        android:textSize="18sp"
                        android:textStyle="bold"
                        android:visibility="gone"
                        />
                
                <TextView
                        android:id="@+id/agenda_day11"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@id/agenda_day12"
                        android:layout_toStartOf="@id/agenda_day12"
                        android:background="@drawable/ic_circle_whitesmoke"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center"
                        android:text="11"
                        android:textSize="18sp"
                        />
                
                <TextView
                        android:id="@+id/agenda_day12"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@id/agenda_day13"
                        android:layout_toStartOf="@id/agenda_day13"
                        android:background="@drawable/ic_circle_whitesmoke"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center"
                        android:text="12"
                        android:textSize="18sp"
                        />
                
                <TextView
                        android:id="@+id/agenda_day13"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:layout_toLeftOf="@id/agenda_day14"
                        android:layout_toStartOf="@id/agenda_day14"
                        android:background="@drawable/ic_circle_whitesmoke"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center"
                        android:text="13"
                        android:textSize="18sp"
                        />
                
                <TextView
                        android:id="@+id/agenda_day14"
                        android:layout_width="40dp"
                        android:layout_height="40dp"
                        android:layout_alignParentEnd="true"
                        android:layout_alignParentRight="true"
                        android:layout_centerVertical="true"
                        android:layout_marginEnd="8dp"
                        android:layout_marginRight="8dp"
                        android:background="@drawable/ic_circle_whitesmoke"
                        android:clickable="true"
                        android:elevation="4dp"
                        android:focusable="true"
                        android:foreground="?attr/selectableItemBackgroundBorderless"
                        android:gravity="center"
                        android:text="14"
                        android:textSize="18sp"
                        />
        </RelativeLayout >
        
        
        <TextView
                android:id="@+id/agenda_track_label"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_above="@id/agenda_tabs"
                android:layout_marginLeft="16dp"
                android:text="Trilha: "
                app:layout_constraintLeft_toLeftOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/agenda_toolbar"
                />
        
        <TextView
                android:id="@+id/agenda_filter"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_marginTop="2dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:drawableStart="@drawable/ic_cancel_black_12dp"
                android:drawablePadding="4dp"
                android:drawableLeft="@drawable/ic_cancel_black_12dp"
                android:drawableTint="@color/colorPrimaryDark"
                android:enabled="false"
                android:focusable="true"
                android:singleLine="false"
                android:text="TODAS"
                android:textStyle="bold"
                app:layout_constraintEnd_toStartOf="@+id/agenda_logo"
                app:layout_constraintStart_toStartOf="@+id/agenda_track_label"
                app:layout_constraintTop_toBottomOf="@+id/agenda_track_label"
                tools:targetApi="m"
                />
        
        <android.support.design.widget.TabLayout
                android:id="@+id/agenda_tabs"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="@color/back3"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/agenda_banner"
                app:tabMode="scrollable"
                app:tabSelectedTextColor="@color/white"
                app:tabTextColor="@color/colorPrimaryDark"
                />
        
        
        <br.com.afischer.fisl.views.CustomViewPager
                android:id="@+id/agenda_pager"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:background="@color/transparent"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toBottomOf="@+id/agenda_tabs"
                />
        
        
        <include
                layout="@layout/app_progress"
                android:elevation="8dp"
                />

</android.support.constraint.ConstraintLayout >
