<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="120dp"
        android:orientation="vertical"
        >
        
        <ImageView
                android:id="@+id/na_exp_logo"
                android:layout_width="80dp"
                android:layout_height="match_parent"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_alignParentTop="true"
                android:scaleType="fitCenter"
                android:src="@mipmap/ic_launcher"
                />
        
        <TextView
                android:id="@+id/na_exp_hour"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="true"
                android:textSize="14sp"
                android:textStyle="bold"
                tools:text="Hora"
                />
        
        
        <TextView
                android:id="@+id/na_exp_room"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="8dp"
                android:layout_marginStart="8dp"
                android:layout_toEndOf="@id/na_exp_hour"
                android:layout_toRightOf="@id/na_exp_hour"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:text="Sala"
                />
        
        <TextView
                android:id="@+id/na_exp_title"
                android:layout_width="0dp"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/na_exp_hour"
                android:layout_toLeftOf="@id/na_exp_logo"
                android:layout_toStartOf="@id/na_exp_logo"
                android:fontFamily="sans-serif-condensed"
                android:lines="3"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:text="TÃ­tulo"
                />
        
        
        <TextView
                android:id="@+id/na_exp_owner"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/na_exp_title"
                android:fontFamily="sans-serif-condensed"
                android:textAllCaps="true"
                android:textColor="@color/colorPrimaryDark"
                android:textSize="14sp"
                android:textStyle="italic"
                tools:text="Palestrante"
                />
        
        
        <TextView
                android:id="@+id/na_exp_track"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentLeft="true"
                android:layout_alignParentStart="true"
                android:layout_below="@id/na_exp_owner"
                android:background="@color/colorPrimary"
                android:fontFamily="sans-serif-condensed"
                android:paddingLeft="4dp"
                android:paddingRight="4dp"
                android:text="Trilha"
                android:textColor="@color/white_smoke"
                android:textSize="12sp"
                />


</RelativeLayout >