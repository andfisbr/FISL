<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >
        
        <ImageView
                android:id="@+id/main_banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="fitXY"
                android:src="@drawable/ic_banner_background"
                />
        
        <ImageView
                android:id="@+id/main_logo"
                android:layout_width="140dp"
                android:layout_height="140dp"
                android:layout_alignBottom="@+id/main_banner"
                android:layout_alignEnd="@+id/main_banner"
                android:layout_alignRight="@+id/main_banner"
                android:layout_marginEnd="-30dp"
                android:layout_marginRight="-30dp"
                android:src="@drawable/ic_logo_piece"
                />
        
        <android.support.constraint.ConstraintLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                >
                
                <TextView
                        android:id="@+id/main_fisl"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:layout_marginStart="16dp"
                        android:layout_marginTop="16dp"
                        android:text="FISL"
                        android:textColor="@color/black"
                        android:textSize="26sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toTopOf="parent"
                        />
                
                <TextView
                        android:id="@+id/main_fisl_18"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="18"
                        android:textColor="#5B7A7A"
                        android:textSize="26sp"
                        app:layout_constraintBottom_toBottomOf="@+id/main_fisl"
                        app:layout_constraintLeft_toRightOf="@+id/main_fisl"
                        app:layout_constraintTop_toTopOf="@+id/main_fisl"
                        />
                
                <TextView
                        android:id="@+id/main_fisl_forum"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="18º Fórum Internacional"
                        android:textColor="@color/black"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/main_fisl"
                        />
                
                <TextView
                        android:id="@+id/main_fisl_software"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="SOFTWARE LIVRE"
                        android:textColor="@color/black"
                        android:textSize="17sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/main_fisl_forum"
                        />
                
                <TextView
                        android:id="@+id/main_fisl_tecnologia"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="16dp"
                        android:text="A tecnologia que liberta"
                        android:textColor="#5B7A7A"
                        android:textSize="14sp"
                        app:layout_constraintLeft_toLeftOf="parent"
                        app:layout_constraintTop_toBottomOf="@+id/main_fisl_software"
                        />
        </android.support.constraint.ConstraintLayout >
        
        
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/main_banner"
                android:scrollbarStyle="outsideOverlay"
                >
                
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        
                        <View
                                android:layout_width="match_parent"
                                android:layout_height="16dp"
                                />
                        
                        <TextView
                                android:id="@+id/main_about"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:text="@string/lorem_ipsum"
                                android:textSize="18sp"
                                />
                        
                        <View
                                android:layout_width="match_parent"
                                android:layout_height="84dp"
                                />
                </LinearLayout >
        </ScrollView >
        
        
        
        <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:orientation="vertical"
                android:layout_above="@+id/main_dev"
                android:background="@color/white"
                >
                <com.synnapps.carouselview.CarouselView
                        android:id="@+id/main_sponsors"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:indicatorVisibility="gone"
                        app:slideInterval="8000"
                        />
        </LinearLayout >
        
        
        <TextView
                android:id="@+id/main_dev"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_centerHorizontal="true"
                android:fontFamily="sans-serif-condensed"
                android:text="desenvolvido por Fulano de Tal"
                android:textSize="14sp"
                android:textStyle="italic"
                android:background="@color/colorPrimary"
                android:textColor="@color/white_smoke"
                android:padding="2dp"
                android:gravity="center"
                />
        
        
        <ImageView
                android:layout_width="match_parent"
                android:layout_height="100dp"
                android:layout_alignParentBottom="true"
                android:scaleType="centerCrop"
                android:src="@drawable/ic_sponsor02"
                android:visibility="gone"
                />
        
        
        
        <android.support.design.widget.FloatingActionButton
                android:id="@+id/main_calendar_button"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:src="@drawable/ic_calendar_clock_white_32dp"
                app:backgroundTint="@color/colorPrimaryDark"
                app:fabSize="normal"
                app:useCompatPadding="true"
                />
</RelativeLayout >