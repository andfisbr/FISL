<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".MainActivity"
        >
        
        <ImageView
                android:id="@+id/main_banner"
                android:layout_width="match_parent"
                android:layout_height="150dp"
                android:scaleType="matrix"
                android:src="@drawable/ic_fisl_banner"
                />
        
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:fontFamily="sans-serif-condensed"
                android:padding="16dp"
                android:text="FISL18\n18º Fórum Internacional\nSOFTWARE LIVRE\nA tecnologia que liberta"
                android:textSize="20sp"
                />
        
        
        <ImageView
                android:id="@+id/main_calendar"
                android:layout_width="64dp"
                android:layout_height="64dp"
                android:layout_alignParentBottom="true"
                android:layout_alignParentEnd="true"
                android:layout_alignParentRight="true"
                android:layout_marginBottom="16dp"
                android:layout_marginEnd="16dp"
                android:layout_marginRight="16dp"
                android:background="?attr/selectableItemBackgroundBorderless"
                android:clickable="true"
                android:focusable="true"
                android:src="@drawable/ic_calendar_black_32dp"
                />
        
        
        <ScrollView
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_below="@+id/main_banner"
                android:scrollbarStyle="outsideOverlay"
                >
                
                <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="vertical"
                        >
                        
                        <View
                                android:layout_width="match_parent"
                                android:layout_height="16dp"
                                />
                        
                        <TextView
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:paddingLeft="16dp"
                                android:paddingRight="16dp"
                                android:text="@string/lorem_ipsum"
                                android:textSize="18sp"
                                />
                        
                        <View
                                android:layout_width="match_parent"
                                android:layout_height="80dp"
                                />
                </LinearLayout >
        </ScrollView >
</RelativeLayout >